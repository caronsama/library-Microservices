/*--预设--*/
body { padding:0px;margin: 0px; } 
.lyrow, .lyrow input, .lyrow textarea { font-size:12px;font-family: 'Microsoft YaHei', '微软雅黑', MicrosoftJhengHei, '华文细黑', STHeiti, MingLiu; } 
.lyrow { height:100vh;width: 100vw; } 
.lyrow div { min-height: 18px;  } 
.lyrow input, .lyrow textarea { border:rgb(235, 235, 235) 1px solid;border-radius: 3px;padding: 5px 8px;outline: 0; } 
.lyrow input:hover, .lyrow textarea:hover { border: 1px solid #6bc1f2; } 
/*--编辑--*/
.lyrow .add { position:static;width:100%;align-self:flex-start;height:99%; } 
.lyrow .bb { position:relative;bottom:8px;font-weight:bold;text-indent:19px;font-size:34px;padding:41px 0 0 0;top:113px; } 
.lyrow .ddddd { top:23%;margin:36px 0 0 0;height:20%;width:40vw; } 
.lyrow .sho { top:33%;position:relative;left:15%;width:70%;border-radius:10px 10px 10px 10px;height:6%;background-color:rgba(230, 230, 230, 1);align-items:flex-start;display:flex;padding:4px 0 0 0;margin:10px 0 0 0;text-indent:18px; } 
.lyrow .an { width:30%;height:35px !important;position:relative;left:58%;top:26%;font-weight:bolder;border-radius:10px 10px 10px 10px; } 
.lyrow .shui { justify-content:center;display:flex;width:18%;height:32px !important;color:rgba(255, 255, 255, 1);background-color:rgba(0, 188, 230, 1); } 
.lyrow .anan {
    font-weight: 900;
    font-size: 17px;
    vertical-align: middle;
    margin: 32px 0 23px 0;
    background-color: rgba(0, 189, 252, 1);
    text-align: center;
    color: rgba(255, 255, 255, 1);
    letter-spacing: 13px;
    justify-content: center;
    display: flex !important;
    position: relative;
    top: 30%;
    left: 20%;
    border-radius: 10px 10px 10px 10px;
    width: 60%;
}
.zc{
    flex-direction: column-reverse;
    margin: 0 189px 0 auto;
    width: 80%;
    font-weight: lighter;
    align-items: flex-end;
    display: flex !important;
    position: relative;
    top: 34%;
}