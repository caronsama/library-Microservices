page{
  background: radial-gradient(#99ccff,#ccffff,#6699ccc0);
}
.tuan{
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 10% 0% 10% 0%;
  padding: 8% 8% 0% 8%;
  font-size: 30px;
  font-weight: bolder;
}
.button{
  width: 90%;
  height: 60px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30px;
  font-weight: bolder;
  background-color: white;
  border-radius: 30px;
}
.button button{
  height: 65px;
  border-radius: 30px 0 0 30px;
  background-color: white;
  border-right: solid 1px #d1d1d1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: larger;
}