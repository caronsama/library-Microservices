.add{
  height: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid rgb(255, 255, 255);
  border-radius: 10px;
  margin: 15px 5px 15px 5px;
  background-color: white;
  box-shadow: 1px 1px 10px rgb(184, 184, 184);
}

.add-class{
  box-shadow: 1px 1px 10px rgb(73, 73, 73);
}

.section{
  height: 100rpx;
  display: flex;
  border-width: 3rpx;
  border-color: rgb(223, 223, 223);
  margin: 10px 20rpx 20rpx 0rpx;
  align-items: center;
  justify-content: center;
}
.cs{
  display: flex;
  width: 70px;
  height: 40px;
  border: 1px solid rgb(196, 196, 196);
  border-radius: 10px;
  justify-content: center;
  align-items: center;
  background-color: rgb(255, 255, 255);
}
.picker{
  font-weight: 900;
}

.qr{
  background-color: white;
  width: 15%;
  height: 70%;
  margin-left: 3%;
  border-radius: 3px;
  display: flex;
  justify-content: center;
  align-items: center;
  border: solid 1px rgb(179, 178, 178);
}
