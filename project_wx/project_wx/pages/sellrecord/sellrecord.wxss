#news-list{
  min-height:60rpx;
  padding-top:0rpx;
}
.list-item{
  display: flex;
  flex-direction: row;
  border: 1rpx solid rgb(255, 255, 255);
  border-radius: 10px;
  margin: 15px 5px 15px 5px;
  background-color: white;
  border: 0px rgb(238, 238, 238) solid;
  box-shadow: 1px 1px 10px rgb(184, 184, 184);
}

.news-title{
  width: 100%;
  line-height: 55rpx;
  font-size: 14pt;
  align-self: center;
}

.bei{
  margin-top: 20px;
  border-bottom:1px rgb(241, 241, 241) solid;
}

.bei button{
  width: 10%; 
  display: flex; 
  justify-content: center;
  align-items: center; 
  background-color: rgb(162, 212, 253);
  border-radius: 0 10px 10px 0;
  border: 1rpx solid rgb(162, 212, 253);
}

