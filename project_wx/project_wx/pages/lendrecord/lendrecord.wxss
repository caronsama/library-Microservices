page{
	background:radial-gradient(#cccccc73,#99ccff67)
}
#news-list{
  min-height:600rpx;
  padding-top:0rpx;
}
.list-item{
  display: flex;
  flex-direction: row;
  border: 1rpx solid rgb(255, 255, 255);
  border-radius: 10px;
  margin: 15px 5px 15px 5px;
  background-color: white;
  border: 0px rgb(238, 238, 238) solid;
  box-shadow: 1px 1px 10px rgb(184, 184, 184);
}

.news-title{
  width: 100%;
  line-height: 55rpx;
  font-size: 14pt;
  align-self: center;
}

.search{
  width:90%;
  display:flex;
  justify-content: space-between;
  align-items: center;
  border-radius:20px;
  border: 1px solid rgb(240, 240, 240);
  background-color:rgb(255, 255, 255);
  margin-bottom: 15px;
  margin-top: 10px;
}
.search button{
  height: 35px;
  background-color: transparent;
}
.buim{
  width: 20px;
  height: 20px;
  border: none;
}
.way{
  display: flex;
  justify-content: center;
  margin-bottom: 10px;
}

.bei{
  margin-top: 20px;
  border-bottom:1px rgb(241, 241, 241) solid;
}

.bei button{
  width: 10%; 
  display: flex; 
  justify-content: center;
  align-items: center; 
  background-color: rgb(162, 212, 253);
  border-radius: 0 10px 10px 0;
  border: 1rpx solid rgb(162, 212, 253);
}

.form{
  border-bottom: 1px solid rgb(221, 221, 221);
}

.add{
  height: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid rgb(255, 255, 255);
  border-radius: 10px;
  margin: 15px 5px 15px 5px;
  background-color: white;
  box-shadow: 1px 1px 10px rgb(184, 184, 184);
}

.add-class{
  box-shadow: 1px 1px 10px rgb(73, 73, 73);
}